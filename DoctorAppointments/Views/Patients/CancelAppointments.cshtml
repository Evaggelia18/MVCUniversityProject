@model DoctorAppointments.Models.Patient
@{
    ViewBag.Title = "CancelAppointments";
}

<h2>Cancel Appointments</h2>


<table class="table" style="border-collapse: collapse; width: 100%; border: 1px solid #ddd;">
    <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Doctor</th>
        <th>Specialty</th>
    </tr>
    @foreach (var item in Model.Appointments)
    {
        <tr class='clickable-row' data-href='url://'>
            <td>
                @Html.DisplayFor(modelItem => item.appointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startAppTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.name)
                @Html.DisplayFor(modelItem => item.Doctor.surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.speciality)
            </td>

        </tr>
    }


</table>

<form>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Cancel</button>
    </div>
</form>

