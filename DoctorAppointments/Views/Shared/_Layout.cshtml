                            <li>@Html.ActionLink("Close an appointment", "CloseAppointment", "Patients")</li>
                            <li>@Html.ActionLink("Delete appointment", "CancelAppointments", "Patients")</li>
                            <li>@Html.ActionLink("My appointment history", "PreviousAppointments", "Patients")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="/">Doctors</a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Select avaliable dates", "", "")</li>
                            <li>@Html.ActionLink("My appointments", "AppointmentSchedule", "Doctors1")</li>
                            <li>@Html.ActionLink("Delete appointment", "", "")</li>
                        </ul>
